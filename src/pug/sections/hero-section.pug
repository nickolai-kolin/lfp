section.section.hero-section
  .hero-section__container.container
    //- Header
    header.hero-section__header
      img.logo(alt='choco logo' src='img/choco-logo.svg')
      //- Nav
      nav.nav
        each link in nav
          a.nav__link(href="#")= link
       
      address.hero-section__phone.phone
        i.phone__icon.icon-phone
        a.phone__num(href='tel:+88009039090') 8 800 903 90 90
      button.btn.nav__burger &#9776;
    .hero-section__intent
      .hero-section__img-wrap
        img.hero-section__img(src='img/img-bars.png')
      .hero-section__main
        h1.hero-section__title.section__title Натуральные шоколадные батончики
        p.hero-section__subtitle.section__subtitle Наши батончики идеально подходят для тех, кто следит за своим здоровьем
        button.btn.btn--color--green Заказать
    //- Advantages
    .hero-section__advantages.advantage-list
      .advantage
        i.advantage__icon.icon-leafs
        span.advantage__description 100% натуральный продукт
      .advantage
        i.advantage__icon.icon-delivery 
        span.advantage__description 3-5 дней доставка по РФ
      .advantage
        i.advantage__icon.icon-ruler
        span.advantage__description Не портит фигуру
